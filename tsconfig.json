{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "inlineSourceMap": true,
    "rootDirs": [
      "./src/",
      "./test/"
    ],
    "outDir": "./dist/",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}